/* Definizioni */

%{
	int num_lines = 0, num_chars = 0;
%}
/*L'opzione noyywrap serve a non chiamare la funzione yywrap quando il
  main viene definito manualmente */
%option noyywrap 

%%
\n	{ ++num_lines; ++num_chars; }
.	{ ++_num_chars; }
%%
int main(void) {
	yylex();
	printf("# of lines: %d\n# of chars: %d\n", num_lines, num_chars);
	return 0;
}
